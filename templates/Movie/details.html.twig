{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col s12 m12">
            <a class="waves-effect waves-light btn-large blue-grey deep-purple-text lighten-5" href="{{ url('movie_list', { 'page': page }) }}"><i class="material-icons left">arrow_back</i>back</a>

            <div class="card blue-grey lighten-5">
                <div class="card-content deep-purple-text darken-4">
                    <span class="card-title">
                        {{ movie.title }}
                    </span>
                    <p>
                        {{ movie.tagline }}
                    </p>
                    <hr>
                    <p>
                        {{ movie.overview }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
