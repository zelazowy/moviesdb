<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.min.css') }}" media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="{{ asset('css/template.css') }}" media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% block stylesheets %}{% endblock %}
</head>
<body>
<header>
    <nav class="#6a1b9a deep-purple darken-4" role="navigation">
        <div class="nav-wrapper container"><a id="logo-container" href="{{ url('movie_list') }}" class="brand-logo">
                moviesDB
            </a>
            <ul class="right hide-on-med-and-down">
                <li><a href="{{ url('movie_list') }}">Movies</a></li>
                <li><a href="{{ url('moderation_list') }}">Moderation</a></li>
            </ul>

            <ul id="nav-mobile" class="sidenav">
                <li><a href="{{ url('movie_list') }}">Movies</a></li>
                <li><a href="{{ url('moderation_list') }}">Moderation</a></li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
</header>

<main>
    <div class="container">
        {% for successFlash in app.session.flashBag.get('success') %}
            <div class="card-panel light-green accent-2">{{ successFlash }}</div>
        {% endfor %}
        {% for errorFlash in app.session.flashBag.get('error') %}
            <div class="card-panel red lighten-1">{{ errorFlash }}</div>
        {% endfor %}

        <div class="section">
            {% block body %}{% endblock %}
        </div>
    </div>
</main>

<footer class="page-footer purple darken-4">
    <div class="footer-copyright">
        <div class="container">
            Made by <a class="orange-text text-lighten-3" href="http://materializecss.com">Materialize</a>
        </div>
    </div>
</footer>

<script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
